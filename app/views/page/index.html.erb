<div class="container" id="header">
    <div id="hd-wrapper" class="f-height">
      <div class="g4">
        <% if current_page?(root_path) %>
          <%= image_tag('logo.png', :alt => '') %>
        <% else %>
          <%= link_to(image_tag('logo.png', :alt => ''), root_path) %>
        <% end %>
      </div><!-- span4 -->

      <div class="g8">
        <nav>
          <ul class="header-nav">
            <li><a href="#">Про компанію</a></li>
            <li class="active"><a href="#">Каталог</a></li>
            <li><a href="#">Статті</a></li>
            <li><a href="#">Контакти</a></li>
          </ul>
        </nav>
      </div><!-- span8 -->
    </div>

    <!-- Banners -->
    <div id="banner-wrapper" class="f-height">
      <div class="g12 banner-holder">
        <%= image_tag('banner.jpg') %>
      </div>
    </div>
    <!-- /Banners -->

<!-- Banner render -->
<%= render :partial => "partials/banner-home" %>
<!-- Banner render -->

    <!-- Info area -->
    <div id="info-wrapper" class="f-height">
      <div class="g4 main-descr-img">
        <%= image_tag('logo-big.jpg') %>
      </div>

      <div class="g8 main-descr-area">
        <h1>Вас вітає «Десятка» &mdash; гуртівня буд-матеріалів</h1>
        <p class="h1-cont">&mdash; лідер з гуртового продажу будівельно-оздоблювальних матеріалів у Західній Україні</p>

        <p class="af-description">Компанія знаходиться на ринку вже протягом 10 років та зарекомендувала себе як надійний партнер не лише для будівельних компаній та гуртових магазинів, а і для мереж гіпермаркетів, таких як «Нова Лінія», «Практікер» та ін.</p>
      </div>
    </div>
    <!-- /Info area -->

<!-- Catalog render -->
<%= render :partial => "partials/catalog-home" %>
<!-- Catalog render -->

<!-- Article render -->
<%= render :partial => "partials/article-home" %>
<!-- Article render -->

</div><!-- container -->
